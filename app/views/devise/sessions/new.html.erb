<div class="row justify-content-center">
  <div class="col-lg-4 col-md-6">
    <h1 class="text-center"><%= t('views.users.login.title') %></h1>
    <hr>
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <%= devise_error_messages! %>

      <div class="form-group mb-3">
        <%= f.email_field :email, autofocus: true, placeholder: 'Email Address', class: 'form-control' %>
      </div>

      <div class="form-group mb-2">
        <%= f.password_field :password, autocomplete: "off", placeholder: 'Password', class: 'form-control' %>
      </div>

      <div class="form-group">
          <%= f.submit t('views.users.login.action'), class: "btn btn-primary btn-block btn-lg" %>
      </div>
    <% end %>
      <div>
        <%= render "devise/shared/links" %>
      </div>
    </div>
</div>
