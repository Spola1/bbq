<%- if controller_name != 'sessions' %>
  <%= link_to t('views.users.login.action'), new_session_path(resource_name) %><br />
<% end -%>

<%- if devise_mapping.registerable? && controller_name != 'registrations' %>
  <%= link_to t('views.users.create.action'), new_registration_path(resource_name) %><br />
<% end -%>

<%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
  <%= link_to t('views.users.password.forgot.question'), new_password_path(resource_name) %><br />
<% end -%>

<%- if devise_mapping.lockable? && resource_class.unlock_strategy_enabled?(:email) && controller_name != 'unlocks' %>
  <%= link_to "Didn't receive unlock instructions?", new_unlock_path(resource_name) %><br />
<% end %>

<%- if devise_mapping.lockable? && resource_class.unlock_strategy_enabled?(:email) && controller_name != 'unlocks' %>
  <%= link_to t('devise.shared.links.didn_t_receive_confirmation_instructions'),
              new_unlock_path(resource_name),
              class: 'btn btn-outline-primary my-3'  %>
<% end %>

<%- if devise_mapping.omniauthable? %>
  <%- resource_class.omniauth_providers.each do |provider| %>
    <%= button_to "Войти с помощью #{OmniAuth::Utils.camelize(provider)}",
                  omniauth_authorize_path(resource_name, provider),
                  method: :post, data: { turbo: false }, class: 'btn btn-outline-primary mb-1' %>
  <% end -%>
<% end -%>
