<!DOCTYPE html>
<html>
  <head>
    <title>Bbq</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <meta name="viewport" content="width=device-width, initial-scale=1">

    <%= javascript_include_tag "https://api-maps.yandex.ru/2.1/?lang=ru_RU&apikey=#{Rails.application.credentials.dig(:yandex_map, :api_key)}" %>
    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= javascript_include_tag "application", "data-turbo-track": "reload", defer: true %>
  </head>

  <body>
    <nav class="navbar navbar-default bg-dark mb-4">
      <div class="container">
        <%= link_to t('app.name'), root_path, class: 'navbar-brand' %>
        <div class="d-flex">
        <% if user_signed_in? %>
          <%= button_to t('views.links.profile'), current_user, method: :get, class: 'btn btn-outline-success m-2' %>
          <%= button_to t('views.links.logout'), destroy_user_session_path, method: :delete, class: 'btn btn-outline-success m-2', data: { turbo: false } %>
        <% else %>
          <%= button_to t('views.links.login'), new_user_session_path, method: :get, class: 'btn btn-outline-success m-2' %>
          <%= button_to t('views.links.register'), new_user_registration_path, method: :get, class: 'btn btn-outline-success m-2' %>
        <% end %>
      </div>
      </div>
    </nav>

    <div class="container">
      <div class="row">
        <div class="col-lg-12">
          <% if flash[:notice].present? %>
            <div class="alert alert-success alert-dismissible">
              <%= flash[:notice] %>
              <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
          <% elsif flash[:alert].present? %>
            <div class="alert alert-danger alert-dismissible">
              <%= flash[:alert] %>
              <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
          <% end %>
          <%= yield %>
        </div>
      </div><!--/row-->
    </div> <!-- /container -->
  </body>
</html>
