<%= form_for [@event, comment] do |f| %>
    <%= render partial: 'partials/form_errors', locals: { model: comment } %>

    <div class="form-group">
      <%= f.label :body, t('views.comments.body') %>
      <%= f.text_area :body, class: 'form-control' %>
    </div>

    <% unless user_signed_in? %>
        <div class="form-group">
          <%= f.label :user_name, t('views.comments.user_name') %>
          <%= f.text_field :user_name, class: 'form-control' %>
        </div>
    <% end %>

    <div class="actions mt-3">
      <%= f.submit t('views.buttons.send'), class: 'btn btn-primary', data: { turbo: false } %>
    </div>
<% end %>
