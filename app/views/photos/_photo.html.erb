<div class="event-photo">
  <hr>
  <%= t('views.photos.add') %> <%= render partial: 'users/user', object: photo.user %>
  <% if current_user_can_edit?(photo) %>
    <%= button_to fa_icon('trash'),
      event_photo_path(photo.event, photo),
      form: {data: {turbo_confirm: t('photos.photo.destroy_confirm')}},
      method: :delete, class: 'bg-transparent border-0', form_class: 'd-inline'%>
    <% end %>
  <p class="mt-2"><%= link_to image_tag(photo.photo.thumb.url), photo.photo.url %></p>
  <hr>
</div>
