<%= form_for(@event) do |f| %>
  <%= render partial: 'partials/form_errors', locals: {model: @event} %>

  <div class="row">
    <div class="col-md-6 mb-3">

      <div class="form-group mb-2">
        <%= f.label :title %>
        <%= f.text_field :title, class: 'form-control' %>
      </div>

      <div class="form-group mb-2">
        <%= f.label :address %>
        <%= f.text_field :address, class: 'form-control' %>
      </div>

      <div class="form-group mb-2">
        <%= f.label :datetime %>
        <p><%= f.datetime_select :datetime, class: 'form-control' %></p>
      </div>

      <div class="form-group mb-2">
        <%= f.label :description %>
        <%= f.text_area :description, class: 'form-control' %>
      </div>

    </div>
  </div>

  <div class="actions">
    <%= f.submit t('views.buttons.save'), class: 'btn btn-primary' %>
    или <%= link_to t('views.buttons.back'), :back %>
  </div>
<% end %>
