<div class="col-lg-4 col-md-6 mb-3">
  <div class="card">
    <img src="<%= asset_path( 'event.jpg' ) %>" />
    <div class="card-body">
      <h3><%= @event.title %></h3>
      <h3><small><%= l @event.datetime, format: :short %></small></h3>
      <h3><small><%= @event.description %></small></h3>
      <h4><small><%= t('views.events.show.place') %>: <%= link_to @event.address,
        "https://yandex.ru/maps/?text=#{@event.address}" %></small></h4>

      <% if current_user_can_edit?(@event) %>
        <div class="buffer-both">
          <%= link_to t('views.events.edit.action'), edit_event_path(@event),
            class: 'btn btn-primary mb-2' %>
          <%= button_to t('views.events.destroy.action'), event_path,
            form: {data: {turbo_confirm: t('views.events.destroy.confirmation')}},
            method: :delete, class: 'btn btn-danger' %>
        </div>
      <% end %>
    </div>
  </div>
</div>
