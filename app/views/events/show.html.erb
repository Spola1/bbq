<div class="col-lg-4 col-md-6 mb-3">
  <div class="card">
    <img src="<%= asset_path( 'event.jpg' ) %>" />
    <div class="card-body">
      <h3><%= @event.title %></h3>
      <h3><small><%= @event.datetime %></small></h3>
      <h3><small><%= @event.description %></small></h3>
      <h4><small>Место проведения: <%= link_to @event.address,
                                               "https://yandex.ru/maps/?text=#{@event.address}" %></small></h4>

      <% if current_user_can_edit?(@event) %>
        <div class="buffer-both">
          <%= link_to 'Изменить', edit_event_path(@event),
            class: 'btn btn-primary' %>
        </div>
      <% end %>
    </div>
  </div>
</div>
