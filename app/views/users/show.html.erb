<div class="text-center">

  <h3><%= @user.name %></h3>

  <%= image_tag user_avatar(@user), size: '300x300' %>

  <% if @user == current_user %>
    <p class="mt-3"><%= link_to t('views.users.edit.action'),
      edit_user_path(@user), class: 'btn btn-primary' %></p>
  <% end %>

  <div class="row">
    <div class="col-md-12">
      <% if @user.events.any? %>
        <h3><%= t('views.users.show.hosted.true') %></h3>
        <div class="row mt-4">
          <%= render partial: 'events/event', collection: @user.events %>
        </div>
      <% else %>
        <p class="buffer-top"><%= t('views.users.show.hosted.false') %></p>
      <% end %>
    </div>
  </div>
</div>
