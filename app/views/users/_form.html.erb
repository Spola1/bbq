<%= form_for @user, html: { multipart: true } do |form| %>
  <%= render partial: 'partials/form_errors', locals: { model: @user } %>

  <div class="form-group mb-3">
    <%= form.label :name %>
    <%= form.text_field :name, class: 'form-control' %>
  </div>

  <div class="form-group mb-3">
    <%= form.label :email %>
    <%= form.text_field :email, class: 'form-control' %>
  </div>

  <div class="form-group mb-3">
    <%= form.label :avatar %>
    <p><%= image_tag(@user.avatar.thumb.url) if @user.avatar? %></p>
    <%= form.file_field :avatar %>
  </div>

  <div class="actions mb-2">
    <%= form.submit t('views.buttons.save'), class: 'btn btn-primary', data: { turbo: false } %>
    <%= t('views.or') %> <%= link_to t('views.buttons.back'), :back %>
  </div>
<% end %>
