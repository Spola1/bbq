<% errors = model.errors %>

<% if errors.any? %>
  <div class="alert alert-secondary col-md-6" role="alert">
    <div class="lead">
      <%= t('views.errors.form_has') %> <%= I18n.t('views.errors.error', count: errors.count) %>
    </div>

    <ul>
      <% errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>
